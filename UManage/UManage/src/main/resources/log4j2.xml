<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="all" monitorInterval="60">
  
  <Appenders>
    <!-- Rolling file appender: rolls over daily or when file size exceeds 10MB -->
    <RollingFile name="RollingFileLogger"
                 fileName="logs/app.log"
                 filePattern="logs/app-%d{yyyy-MM-dd}-%i.log.gz">
<!--      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %c{1.}:%M - %msg%n" />

-->      
<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %c{1.}:%M - %msg%n" />
<Policies>
        <!-- Roll over at midnight -->
        <TimeBasedTriggeringPolicy />
        <!-- Roll over when file size exceeds 10 MB -->
        <SizeBasedTriggeringPolicy size="10MB" />
      </Policies>
      <!-- Keep 30 days of logs -->
      <DefaultRolloverStrategy max="30" />
    </RollingFile>

    <!-- Console appender to log to console (stdout) -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %c{1.}:%M - %msg%n" />
    </Console>
  </Appenders>

  <Loggers>
    <!-- Enable debug logging for properties loading -->
    <Logger name="java.util.Properties" level="debug" additivity="false">
      <AppenderRef ref="RollingFileLogger" />
    </Logger>

    <!-- Enable debug logging for class loading -->
    <Logger name="java.lang.ClassLoader" level="debug" additivity="false">
      <AppenderRef ref="RollingFileLogger" />
    </Logger>

    <!-- Application specific logger -->
    <Logger name="org.umanage.controller" level="debug" additivity="false">
      <AppenderRef ref="RollingFileLogger" />
      <AppenderRef ref="Console" />
    </Logger>

    <!-- Root logger: logs INFO and above to both rolling file and console -->
    <Root level="info">
      <AppenderRef ref="RollingFileLogger" />
      <AppenderRef ref="Console" />
    </Root>
  </Loggers>

</Configuration>
